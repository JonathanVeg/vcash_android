<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="@dimen/activity_margin"
        android:paddingStart="@dimen/activity_margin"
        android:paddingTop="@dimen/activity_margin">

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="0px"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:contentDescription="XVC Logo"
            app:srcCompat="@drawable/xvc_icon" />


        <TextView
            android:id="@+id/tvAboutDeveloper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="App developed by Jonathan Silva"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvAboutCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="(Source Code)"
            android:textSize="12sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/llDonate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/tvAboutDonate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Donate XVC (click in the wallet to copy)"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvAboutDonateWallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="VsShsTf3Za2MAy6e5waDNM6u7VBEVKfxgh"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="#000000"
            android:gravity="center_horizontal"
            android:orientation="vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="8dp"
            android:text="Source of values"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Official site: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvAboutVcash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="https://v.cash" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zero Slot (fastest slot-less gambling):"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvAboutZeroSlot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="http://zeroslot.com/" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coin Market Cap: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvAboutCoinMarketCap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="https://coinmarketcap.com/currencies/vcash/" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bittrex: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvAboutBittrex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="https://bittrex.com/Market/Index?MarketName=BTC-XVC" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Poloniex: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvAboutPoloniex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="https://poloniex.com/exchange#btc_xvc" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blinktrade API (BRL prices): "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvAboutBlinktrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="https://blinktrade.com/docs/?shell#public-rest-api" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blockexperts: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvAboutBlockexperts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="https://www.blockexperts.com/xvc/" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>